<%- include("partials/header.ejs") %>

<div class="container">
    <h1>Edit Post</h1>

    <form action="/update/<%= post.id %>" method="post" class="creation-form">
        <input type="text" id="author" placeholder="author" name="author" value="<%= post.author %>" required>

        <input type="text" id="title" placeholder="title" name="title" value="<%= post.title %>" required>

        <textarea id="content" name="content" placeholder="content" rows="5" required><%= post.content %></textarea>

        <button type="submit" class="btn btn-outline-info">Save Changes</button>
    </form>
</div>

