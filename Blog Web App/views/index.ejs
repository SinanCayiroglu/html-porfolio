<%- include("partials/header.ejs") %>

<div class="index-main">
      <h1>Home Page</h1>
      <p> <%= startingContent %> </p>


      <%  posts.forEach(function(post){ %>
    
        <h1><%=post.title%></h1>
        <p>
        <%=post.content.substring(0, 100) + " ..."%>
        <a href="/posts/<%=post.title%>">Read More</a>
        </p>
    
    
        <% }) %>
        
          <button type="button" class="btn btn-outline-info btn-lg px-4 me-sm-3 fw-bold"><a href="/create">Create a new post</a></button>
          <button type="button" class="btn btn-outline-dark btn-lg px-4">Edit</button>


  </div>






